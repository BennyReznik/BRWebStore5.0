{
  "extends": "tslint:recommended",
  "rulesDirectory": [],
  "rules": {
    "no-empty": [false],
    "object-literal-sort-keys": [false],
    "ordered-imports": [false],
    "max-line-length": [
      true,
      { "limit": 120, "ignore-pattern": "^import |//" }
    ],
    "member-ordering": [false],
    "arrow-parens": [false],
    "interface-name": [false],
    "curly": [true, "ignore-same-line"],
    "trailing-comma": [
      false,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "quotemark": [false, "single"]
  }
}
